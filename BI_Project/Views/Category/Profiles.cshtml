<script type="text/javascript">
    function SubmitForm(page) {
        var url = '@baseUrl/EVNImportExcel/Index/@blockData.PermissionID' + "?page=" + page;
        var form = document.getElementById('frmsearch');
        form.action = url;

        form.submit();
    }
</script>
